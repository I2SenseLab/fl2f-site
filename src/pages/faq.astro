---
import Career from "../components/Career.astro";
import Showcase from "../components/Showcase.astro";
import Layout from "../layouts/Layout.astro";

const faqsArr = await Astro.glob("../content/faqs/*.md");
---

<Layout
  title="FAQ"
  description="FAQs - Read some of our most asked questions. "
>
  <Showcase
    image="/images/hero/tinywebp/faqs.webp"
    overlayLight={true}
    heading="FAQ"
  />

  {
    faqsArr
      .sort((a, b) => {
        const aOrder = a.frontmatter.order;
        const bOrder = b.frontmatter.order;
        return aOrder - bOrder;
      })
      .map((faq) => {
        const { title } = faq.frontmatter;
        const Content = faq.Content;
        return <Career title={title} Content={Content} />;
      })
  }
</Layout>
